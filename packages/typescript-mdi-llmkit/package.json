{
  "name": "mdi-llmkit",
  "version": "0.1.0",
  "description": "Utilities for managing multi-shot conversations and structured data handling in LLM applications",
  "author": "Mikhail Voloshin",
  "license": "MIT",
  "type": "module",
  "sideEffects": false,
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "test": "vitest run",
    "prepublishOnly": "npm run test && npm run build"
  },
  "keywords": [
    "llm",
    "openai",
    "responses-api",
    "structured-outputs",
    "chat"
  ],
  "dependencies": {
    "dotenv": "^17.3.1",
    "openai": "^6.2.0"
  },
  "devDependencies": {
    "@types/node": "^22.18.10",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
